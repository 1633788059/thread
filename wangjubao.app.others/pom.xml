	<build>
		<plugins>
			<plugin>
				<groupId>com.alibaba.maven.plugins</groupId>
				<artifactId>maven-autoconf-plugin</artifactId>
				<version>0.5</version>
				<executions>
					<execution>
						<id>autoconf</id>
						<phase>process-resources</phase>
						<goals>
							<goal>config</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<path>${project.build.directory}/${project.build.finalName}.${project.packaging}</path>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.1</version>
				<dependencies>
					<dependency>
						<groupId>org.codehaus.plexus</groupId>
						<artifactId>plexus-compiler-javac</artifactId>
						<version>1.8.1</version>
					</dependency>
				</dependencies>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>versions-maven-plugin</artifactId>
				<version>1.3.1</version>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<name>Nexus Release Repository</name>
			<url>http://110.76.47.211:8081/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Nexus Snapshot Repository</name>
			<url>http://110.76.47.211:8081/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<profiles>
		<profile>
			<id>release</id>
			<activation>
				<property>
					<name>env</name>
					<value>release</value>
				</property>
			</activation>
			<build>
				<plugins>
					<!-- Jar bin/conf/lib resources -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<!-- 这是最新版本，推荐使用这个版本 -->
						<version>2.2.1</version>
						<executions>
							<execution>
								<id>assemble</id>
								<goals>
									<goal>single</goal>
								</goals>
								<phase>package</phase>
							</execution>
						</executions>
						<configuration>
							<encoding>UTF-8</encoding>
							<!-- 发布模式使用的maven assembly插件描述文件 -->
							<descriptors>
								<descriptor>src/assemble/release.xml</descriptor>
							</descriptors>
							<!-- 如果一个应用的包含多个deploy模块，如果使用同样的包名�?如果把它们复制的一个目录中可能会失败，所以包名加�? artifactId以示区分 -->
							<finalName>${project.artifactId}</finalName>
							<!-- scm 要求 release 模式打出的包放到顶级目录下的target子目录中 -->
							<outputDirectory>${project.parent.build.directory}</outputDirectory>
							<appendAssemblyId>false</appendAssemblyId>
							<attach>false</attach>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>dev</id>
			<activation>
				<property>
					<name>env</name>
					<value>dev</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<!-- 这是最新版本，推荐使用这个版本 -->
						<version>2.2.1</version>
						<executions>
							<execution>
								<id>assemble</id>
								<goals>
									<goal>single</goal>
								</goals>
								<phase>package</phase>
							</execution>
						</executions>
						<configuration>
							<encoding>UTF-8</encoding>
							<descriptors>
								<descriptor>${basedir}/src/assemble/dev.xml</descriptor>
							</descriptors>
							<finalName>${project.artifactId}</finalName>
							<outputDirectory>${project.build.directory}</outputDirectory>
							<appendAssemblyId>false</appendAssemblyId>
							<attach>false</attach>
						</configuration>
					</plugin>

					<!-- 对装配出来的目录执行autoconfig -->
					<plugin>
						<groupId>com.alibaba.maven.plugins</groupId>
						<artifactId>maven-autoconf-plugin</artifactId>
						<executions>
							<execution>
								<goals>
									<goal>config</goal>
								</goals>
								<phase>pre-integration-test</phase>
							</execution>
						</executions>
						<configuration>
							<encoding>UTF-8</encoding>
							<destFiles>
								<destFile>${project.build.directory}/${project.artifactId}</destFile>
							</destFiles>
							<includePackagePatterns>
								<includePackagePattern>lib/*.jar</includePackagePattern>
							</includePackagePatterns>
							<!-- 各个项目可能还有一些特定的配置 -->
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
